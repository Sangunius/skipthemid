{
  "manifest_version": 3,
  "name": "SkipTheMid - Hide Junk on Netflix",
  "version": "1.0.0",
  "description": "Auto-hide shows and movies with IMDb ratings below your threshold. Only see the good stuff on Netflix!",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.netflix.com/*",
    "https://www.omdbapi.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.netflix.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "SkipTheMid Settings"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "welcome.html"],
      "matches": ["https://www.netflix.com/*"]
    }
  ]
}
